{{!
    @template mod_oublog/modal

    Moodle modal template with delete, deleteandmail and cancel buttons.

    The purpose of this template is to render a modal.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the boday

    Example context (json):
    {
        "content": "Example content"
    }
}}

{{< core/modal }}
    {{$classes}}oublog-delete-modal{{/classes}}
    {{$title}}
        {{#str}} confirm, moodle {{/str}}
    {{/title}}

    {{$body}}
        {{content}}
    {{/body}}

    {{$footer}}
        <button type="button" class="btn btn-danger" data-action="delete">{{#str}} delete, oublog {{/str}}</button>
        <button type="button" class="btn btn-danger" data-action="deleteandmail">{{#str}} deleteandemail, oublog {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel, oublog {{/str}}</button>
    {{/footer}}
{{/ core/modal }}
